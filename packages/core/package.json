{
  "name": "@mnemo/core",
  "version": "0.1.0",
  "description": "Core functionality for Mnemo - Gemini client, repo loader, types",
  "author": "Voltage Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CyberBrown/mnemo",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/CyberBrown/mnemo#readme",
  "bugs": {
    "url": "https://github.com/CyberBrown/mnemo/issues"
  },
  "keywords": [
    "mcp",
    "gemini",
    "context",
    "memory",
    "ai",
    "claude",
    "llm",
    "caching",
    "context-window"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
