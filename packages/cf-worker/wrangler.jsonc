{
  "$schema": "https://raw.githubusercontent.com/cloudflare/workers-sdk/main/packages/wrangler/config-schema.json",
  "name": "mnemo",
  "main": "src/index.ts",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],

  // Keep workers.dev enabled for fallback
  // Custom domains configured in Cloudflare dashboard (Settings > Domains & Routes)
  // - mnemo.distributedelectrons.com (internal)
  // - mnemo.logosflux.io (public/open source)
  "workers_dev": true,

  // Extended CPU time for long-running LLM queries (5 minutes max)
  "limits": {
    "cpu_ms": 300000
  },

  // D1 Database for cache metadata
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "mnemo-cache",
      "database_id": "1bf57f2d-d380-475f-8faa-b9f791d14662"
    }
  ],

  // R2 for file staging (optional)
  "r2_buckets": [
    {
      "binding": "STORAGE",
      "bucket_name": "mnemo-files"
    },
    {
      "binding": "MNEMO_CONTENT",
      "bucket_name": "mnemo-content"
    }
  ],

  // AI Search for tiered RAG queries
  "ai_search": [
    {
      "binding": "AI_SEARCH",
      "index_name": "mnemo-search"
    }
  ],

  // KV for rate limiting
  "kv_namespaces": [
    {
      "binding": "RATE_LIMIT_KV",
      "id": "60c4a16bdebd469f93a3e143f6d2b115"
    }
  ],

  // Workers AI for embeddings
  "ai": {
    "binding": "AI"
  },

  // Vectorize for vector storage (RAG)
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "mnemo-chunks"
    }
  ],

  // Environment variables
  "vars": {
    "ENVIRONMENT": "production",
    "ALERT_EMAIL": "chris@solamp.io",
    "DAILY_REQUEST_LIMIT": "5000",
    "DAILY_TOKEN_LIMIT": "2000000",
    // AI Search (tiered RAG) configuration
    "AI_SEARCH_NAME": "mnemo-knowledge",
    "AI_SEARCH_CONFIDENCE_THRESHOLD": "0.7",
    "AI_SEARCH_MAX_RESULTS": "10"
  },

  // Secrets (set via wrangler secret put)
  // GEMINI_API_KEY - Required for Gemini API access
  // RESEND_API_KEY - For sending abuse alert emails
  // WRITE_PASSPHRASE - Passphrase for write operations (context_load, context_refresh, context_evict)

  // Development settings
  "dev": {
    "port": 8787,
    "local_protocol": "http"
  }
}
