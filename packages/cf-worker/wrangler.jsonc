{
  "$schema": "https://raw.githubusercontent.com/cloudflare/workers-sdk/main/packages/wrangler/config-schema.json",
  "name": "mnemo",
  "main": "src/index.ts",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],

  // Custom domain (requires logosflux.io zone in Cloudflare)
  "routes": [
    { "pattern": "mnemo.logosflux.io", "custom_domain": true }
  ],

  // Keep workers.dev subdomain active as backup
  "workers_dev": true,

  // D1 Database for cache metadata
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "mnemo-cache",
      "database_id": "1bf57f2d-d380-475f-8faa-b9f791d14662"
    }
  ],
  
  // R2 for file staging (optional)
  "r2_buckets": [
    {
      "binding": "STORAGE",
      "bucket_name": "mnemo-files"
    }
  ],

  // KV for OAuth tokens and authorization codes
  "kv_namespaces": [
    {
      "binding": "OAUTH_KV",
      "id": "placeholder-create-with-wrangler"
    }
  ],
  
  // Environment variables
  "vars": {
    "ENVIRONMENT": "production"
  },
  
  // Secrets (set via wrangler secret put)
  // GEMINI_API_KEY - Required for Gemini API access
  // MNEMO_AUTH_TOKEN - Optional Bearer token for CLI/Claude Code authentication
  //                    If not set, endpoints are publicly accessible (unless OAuth is enabled)
  //                    If set, /mcp and /tools/:toolName accept this token
  //
  // OAuth 2.0 Configuration (for web clients like Claude.ai):
  // OAUTH_CLIENT_ID - Client ID for OAuth (single tenant)
  // OAUTH_CLIENT_SECRET - Client secret for OAuth
  // CF_ACCESS_TEAM_DOMAIN - e.g., "yourteam.cloudflareaccess.com"
  // CF_ACCESS_AUD - Application Audience (AUD) tag from CF Access
  
  // Development settings
  "dev": {
    "port": 8787,
    "local_protocol": "http"
  }
}
